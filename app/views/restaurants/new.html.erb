<div class="container">
  <h1>Add a Restaurant</h1>
  <div class="row justify-content-center m-5">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
    <%= link_to "Back to main page", restaurants_path, class: "btn btn-success my-3" %>
  </div>
</div>
